<MirrorRoot>:

<Werte>:
	# Sichtbarer Bereich: 165, 30, 155, 30
	
	weatherIcon: weatherIconId
	weatherTemperature: weatherTemperatureId
	weatherCondition: weatherConditionId
	sensorTemperature: sensorTemperatureId
	
	currentTime: currentTimeId
	currentDay: currentDayId
	currentMonth: currentMonthId
	
	daysToHolidays: daysToHolidaysId
	
	alexa_Response: alexa_Response

	# Diablo
	#characterName: characterNameId
	#quotation: quotationId
	#seasonalIcon: seasonalIconId
	#hardcoreIcon: hardcoreIconId
	#damageIcon: damageIconId
	#toughnessIcon: toughnessIconId
	#healingIcon: healingIconId
	#damage: damageId
	#toughness: toughnessId
	#healing: healingId
	#levelIcon: levelIconId
	#levelText: levelTextId
	#totalKillsText: totalKillsTextId
	#playtimeBarbarian: playtimeBarbarianId
	#playtimeCrusader: playtimeCrusaderId
	#playtimeDemonHunter: playtimeDemonHunterId
	#playtimeMonk: playtimeMonkId
	#playtimeNecromancer: playtimeNecromancerId
	#playtimeWitchDoctor: playtimeWitchDoctorId
	#playtimeWizard: playtimeWizardId
	
	#:set padL 180
	#:set padR 170
	#:set padLR 350
	#:set padT 45
	#:set padB 45
	#:set padTB 90
	#:set fn "resources/font/Letters for Learners.ttf"
	
	# top left
	RelativeLayout:
		id: topLeftCorner
		pos: padL, root.height - padT - self.height
		size_hint: None, None
		height: (root.height - padTB - bottomCenter.height)/2
		width: (root.width - padLR)/2
		Button:
			pos: 0, 0
			size: topLeftCorner.size
			background_color: .2, .5, .6, 1
			opacity: 0
		# Wetter-Icon
		Image:
			id: weatherIconId
			pos: 0, topLeftCorner.height - self.height
			size_hint: None, None
			size: dp(100), dp(100)
			color: .1, .6, 1, 1
			source: "resources/weather_icons/n/000.png"
		# Temperatur (drau√üen)
		Label:
			id: weatherTemperatureId
			pos: weatherIconId.width + 5, weatherIconId.top - self.height
			size_hint: None, None
			height: weatherIconId.height * .6
			width: self.texture_size[0]
			text_size: None, None
			halign: 'left'
			valign: 'bottom'
			font_size: 55
			font_name: fn
			text: '?'
		# Temperatur (drinnen)
		Label:
			id: sensorTemperatureId
			pos: weatherTemperatureId.right, weatherTemperatureId.y
			size_hint: None, None
			height: weatherTemperatureId.height
			width: (root.width - padLR)/2 - weatherTemperatureId.width - weatherIconId.width
			text_size: self.size
			halign: 'left'
			valign: 'bottom'
			font_size: 55
			font_name: fn
			text: ' / ?'
		# Wetterbedingung
		Label:
			id: weatherConditionId
			pos: weatherTemperatureId.x, weatherTemperatureId.y - self.height + 12
			size_hint: None, None
			height: weatherIconId.height * .4
			width: (root.width - padLR)/2 - weatherIconId.width
			text_size: self.size
			halign: 'left'
			valign: 'top'
			font_size: 40
			font_name: fn
			text: '???'
	
	# top right
	RelativeLayout:
		id: topRightCorner
		pos: root.width - padR - self.width, root.height - padT - self.height
		size_hint: None, None
		height: (root.height - padTB - bottomCenter.height)/2
		width: (root.width - padLR)/2
		Button:
			pos: 0, 0
			size: topRightCorner.size
			background_color: .5, .2, .6, 1
			opacity: 0
		# Uhrzeit
		Label:
			id: currentTimeId
			pos: topRightCorner.width - self.width, topRightCorner.height - self.height
			size_hint: None, None
			height: weatherIconId.height
			width: self.texture_size[0]
			text_size: None, None
			halign: 'left'
			valign: 'middle'
			font_size: 80
			font_name: fn
			text: '??:??'
		# Monat
		Label:
			id: currentMonthId
			pos: currentTimeId.x - self.width - 10, currentTimeId.top - self.height
			size_hint: None, None
			height: currentTimeId.height /2
			width: (root.width - padLR)/2 - currentTimeId.width
			text_size: self.size
			halign: 'right'
			valign: 'bottom'
			font_size: 40
			font_name: fn
			text: '???'
		# Tag
		Label:
			id: currentDayId
			pos: currentMonthId.x, currentTimeId.y + 14
			size_hint: None, None
			height: currentMonthId.height
			width: currentMonthId.width
			text_size: self.size
			halign: 'right'
			valign: 'top'
			font_size: 55
			font_name: fn
			text: '?'
			
	# bottom right
	RelativeLayout:
		id: bottomRightCorner
		pos: root.width - padR - self.width, bottomCenter.top
		size_hint: None, None
		height: (root.height - padTB - bottomCenter.height)/2
		width: (root.width - padLR)/2
		opacity: 1
		Button:
			pos: 0, 0
			size: bottomRightCorner.size
			background_color: .8, .5, .6, 1
			opacity: 0
		# Events
		Label:
			id: nextEventsId
			pos: 0, 0
			size_hint: None, None
			height: (root.height - padTB)/2
			width: (root.width - padLR)/2
			text_size: self.size
			halign: 'right'
			valign: 'bottom'
			font_size: 40
			font_name: fn
			max_lines: 5
			text: 'zeile 1\nzeile 2\nzeile 3\nzeile 4\nzeile 5'
			opacity: 0

  #Alexa Response
	RelativeLayout:
		size_hint: None, None
		height: root.height
		width: root.width
		Image:											# Alexa_response
			id: alexa_Response
			anim_delay: 0.08
			pos: root.width/2 - self.width/2, root.height/2 - self.height/2 + 100
			size_hint: None, None
			size: dp(300), dp(300)

