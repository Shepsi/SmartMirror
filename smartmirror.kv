	# bottom center
	RelativeLayout:
		id: bottomCenter
		pos: padL, padB
		size_hint: None, None
		height: 50
		width: root.width - padLR
		Button:
			pos: 0, 0
			size: bottomCenter.size
			background_color: .9, .2, .2, 1
			opacity: 0
		# Name
		# Tage bis Halloween/Weihnachten
		Label:
			id: daysToHolidaysId
			pos: 0, 0
			size_hint: None, None
